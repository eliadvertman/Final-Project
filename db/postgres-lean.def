Bootstrap: docker
From: postgres:15

%environment
    export POSTGRES_USER=pic_user
    export POSTGRES_PASSWORD=pic_password
    export POSTGRES_DB=${POSTGRES_DB:-pic_db}
    export PGDATA=/var/lib/postgresql/data

%files
    ./init /docker-entrypoint-initdb.d

%labels
    Author PIC Project
    Version 1.0
    Description Lean PostgreSQL container equivalent to docker-compose.yml