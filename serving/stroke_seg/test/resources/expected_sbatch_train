#!/bin/bash
## resource allocation

#SBATCH --chdir=/home/veeliad/work

#SBATCH --ntasks=1
#SBATCH --cpus-per-task=8
#SBATCH --mem=64g
#SBATCH --gres=gpu:a100:1
#SBATCH --qos=gpu

#SBATCH --job-name=test_stroke_model-1757589116
#SBATCH --output=%x-%j.out  # %x => job-name, %j => jobid
#SBATCH --error=%x-%j.err


## run time
singularity run --fakeroot --overlay TEST/overlay --nv --env device=cuda --env configuration=3d_fullres --env task_number=130 --pwd /stroke_segmentation --mount type=bind,source=$(pwd)/output,destination=/stroke_segmentation/nnunet_results training_big_lesions.sif


